<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio">

    <TextView
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="60dp"
        android:id="@+id/textoDificultad"
        android:text="¿Elige el Ranking?"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#b65831"
        android:background="@drawable/fondo_texto_dificultado"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="50dp"/>


    <Button
        android:id="@+id/facil"
        android:layout_width="225dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/fondo_boton_inicio"
        android:padding="20dp"
        android:text="Ranking en Fácil"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/medio"
        android:layout_width="225dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/fondo_boton_inicio"
        android:padding="20dp"
        android:text="Ranking en Medio"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/dificil"
        android:layout_width="225dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/fondo_boton_inicio"
        android:text="Ranking en Dificil"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</LinearLayout>