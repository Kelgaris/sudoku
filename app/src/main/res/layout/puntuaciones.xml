<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio">

    <TextView
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="60dp"
        android:id="@+id/textoDificultad"
        android:text="Puntuaciones"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#b65831"
        android:background="@drawable/fondo_texto_dificultado"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPuntuaciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:clipToPadding="false" />

    <Button
        android:id="@+id/volver"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/fondo_boton_inicio"
        android:text="Volver"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="75dp"/>

</LinearLayout>