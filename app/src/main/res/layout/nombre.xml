<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio">

    <TextView
        android:layout_width="350dp"
        android:padding="10dp"
        android:layout_height="60dp"
        android:id="@+id/textoNombre"
        android:text="¿Cúal es tu nombre?"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#b65831"
        android:background="@drawable/fondo_texto_dificultado"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="75dp"
        android:id="@+id/jugador"
        android:hint="Introduzca un nombre"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:background="@drawable/fondo_texto_dificultado"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:id="@+id/jugar"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        android:text="Empezar"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/fondo_boton_inicio"/>

</LinearLayout>